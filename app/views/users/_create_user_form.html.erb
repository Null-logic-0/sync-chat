<%= form_with(model: @user, class: "form") do |f| %>

  <div class="flex items-center gap-2">
    <div class="flex flex-col gap-2 w-full">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, autofocus: true, class: "input", placeholder: "John" %>
      <% if @user.errors[:name].any? %>
        <div class="field-error"><%= @user.errors[:name].first %></div>
      <% end %>
    </div>

    <div class="flex flex-col gap-2 w-full">
      <%= f.label :lastname, class: 'label' %>
      <%= f.text_field :lastname, class: "input", placeholder: "Doe" %>
      <% if @user.errors[:lastname].any? %>
        <div class="field-error"><%= @user.errors[:lastname].first %></div>
      <% end %>
    </div>
  </div>


  <%= f.label :email, class: "label" %>
  <%= f.email_field :email, placeholder: "your@email.com", class: "input" %>
  <% if @user.errors[:email].any? %>
    <div class="field-error"><%= @user.errors[:email].first %></div>
  <% end %>

  <%= f.label :password, class: "label" %>
  <%= f.password_field :password, placeholder: "********", class: "input" %>
  <% if @user.errors[:password].any? %>
    <div class="field-error"><%= @user.errors[:password].first %></div>
  <% end %>

  <%= f.label :password_confirmation, "Confirmation Password", class: "label" %>
  <%= f.password_field :password_confirmation, placeholder: "********", class: "input" %>
  <% if @user.errors[:password_confirmation].any? %>
    <div class="field-error"><%= @user.errors[:password_confirmation].first %></div>
  <% end %>

  <button type="submit" class="main-button mt-4">
    Sign Up
  </button>

<% end %>